<?php

/**
 * @var string $Email
 * @var string $Name
 * @var string $Subject
 * @var string $Message
 */

$From = function(?string $Name, ?string $Email): string {

	if(!$Name && !$Email)
	return 'Unknown';

	if($Name && !$Email)
	return $Name;

	if($Email && !$Name)
	return $Email;

	return sprintf('%s <%s>', $Name, $Email);
};

