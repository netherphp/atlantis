import NUI from '/share/nui/nui.js?v=<?php $Printer($CacheBuster) ?>';

jQuery(function(){

	jQuery('#LogoutAccept')
	.on('click', function(){

		let req = new NUI.Request('LOGOUT', '/api/user/session');

		(req.send())
		.then(req.goto)
		.catch(req.catch);

		return;
	});

	jQuery('#LogoutReject')
	.on('click', function(){
		location.href = '/';
		return;
	});

	return;
});
